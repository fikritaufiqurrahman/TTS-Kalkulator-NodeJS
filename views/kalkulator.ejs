<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kalkulator</title>
    <link rel="icon" href="img/Calculator-icon.png" type="image/x-icon">
    <link rel="stylesheet" href="css/kalkulator/style.css">
    <script src="js/kalkulator/script.js"></script>

</head>

<body>

    <div class="container">
        <div class="display">
            <form name="formAngka">
                <input type="text" class="textview" name="isiText">
            </form>
        </div>
        <div class="btn">
            <div class="btn-item colour">
                <input class="button" type="button" onclick="hapusSemua()" value="C">
            </div>
            <div class="btn-item colour">
                <input class="button" type="button" onclick="hapus()" value="del">
            </div>
            <div class="btn-item colour">
                <input class="button" type="button" onclick="ins('%')" value="%">
            </div>
            <div class="btn-item colour">
                <input class="button" type="button" onclick="ins('/')" value="/">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(7)" value="7">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(8)" value="8">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(9)" value="9">
            </div>
            <div class="btn-item colour">
                <input class="button" type="button" onclick="ins('*')" value="x">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(4)" value="4">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(5)" value="5">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(6)" value="6">
            </div>
            <div class="btn-item colour">
                <input class="button" type="button" onclick="ins('-')" value="-">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(1)" value="1">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(2)" value="2">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(3)" value="3">
            </div>
            <div class="btn-item colour">
                <input class="button" type="button" onclick="ins('+')" value="+">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins('00')" value="00">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins(0)" value="0">
            </div>
            <div class="btn-item">
                <input class="button" type="button" onclick="ins('.')" value=".">
            </div>
            <div class="btn-item equal">
                <input class="button" type="button" onclick="samaDengan()" value="=">
            </div>


        </div>
    </div>
</body>

</html>